= content_for :title, "#{Rails.env.development? ? :"Dev Timur" : :Timur } - Browse - #{@record_name}"

#root
%script{ type: "text/javascript" }
  :plain
    $(function() {
      ReactDOM.render(
        React.createElement(Timur, {
          #{current_user ? "user: '#{current_user.name}', " : '' }
          mode: 'browse',
          environment: '#{Rails.env.development? ? 'development' : 'production'}',
          model_name: '#{@model_name.underscore}',
          record_name: '#{@record_name}',
          project_name: '#{@project_name}',
          can_edit: #{ current_user && current_user.can_edit?(@project_name) ? :true : :false },
          is_admin: #{ current_user && current_user.is_admin?(@project_name) ? :true : :false }
        }),
        $('#root')[0]
      );
    })

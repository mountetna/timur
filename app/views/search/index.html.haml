= content_for :title, "#{Rails.env.development? ? :"Dev Timur" : :Timur } - Search"

#root
%script{ type: "text/javascript" }
  :plain
    $(function() {
      ReactDOM.render(
        React.createElement(Timur, {
          #{current_user ? "user: '#{current_user.name}', " : '' }
          mode: 'search',
          environment: '#{Rails.env.development? ? 'development' : 'production'}',
        }),
        $('#root')[0]
      );
    })
